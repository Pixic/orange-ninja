    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "semi": true,
        "tabWidth": 4,
        "bracketSpacing": true,
        "arrowParens": "always"
    },
    "eslintIgnore": [
        "serviceWorker.js"
    ],
    "devDependencies": {
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-jest": "^23.8.2",
        "eslint-plugin-promise": "^4.2.1",
        "gh-pages": "^2.2.0",
        "prettier-eslint-cli": "^5.0.0"
